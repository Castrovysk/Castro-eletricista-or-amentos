let extras=[];

function renderServicos(){
 const lista=document.getElementById("servicosLista"); lista.innerHTML="";
 servicos.forEach((s,i)=>{
 const div=document.createElement("div"); div.className="card";
 div.innerHTML=`<div class="left tooltip">
 <i class="${s.icone}"></i>
 <input type="checkbox" id="serv${i}" data-nome="${s.nome}" data-valor="${s.valor}" onchange="calcular()">
 ${s.nome}
 <span class="tooltiptext">${s.tooltip}</span>
 </div>
 <input type="number" id="qtd${i}" min="1" value="1" onchange="calcular()" title="Quantidade">`;
 lista.appendChild(div);
 });
}

renderServicos();

function calcular(){
 let total=0;
 servicos.forEach((s,i)=>{
 const checkbox=document.getElementById(`serv${i}`);
 const qtd=Number(document.getElementById(`qtd${i}`).value)||1;
 if(checkbox.checked) total+=s.valor*qtd;
 });
 extras.forEach(e=>{ total+=Number(e.valor); });
 document.getElementById("total").innerText=total;
}

function adicionarExtra(){
 const desc=document.getElementById("descricaoExtra").value.trim();
 const val=Number(document.getElementById("valorExtra").value);
 if(desc && val>0){
 extras.push({descricao:desc, valor:val});
 document.getElementById("descricaoExtra").value="";
 document.getElementById("valorExtra").value="";
 calcular();
 alert(`Servi√ßo "${desc}" adicionado!`);
 } else alert("Preencha descri√ß√£o e valor corretamente!");
}

function enviarWhats(){
 let cliente=document.getElementById("cliente").value||"Cliente";
 let mensagem=`Ol√°, meu nome √© ${cliente}. Gostaria de um or√ßamento:%0A%0A`;
 let total=0;
 servicos.forEach((s,i)=>{
 const checkbox=document.getElementById(`serv${i}`);
 const qtd=Number(document.getElementById(`qtd${i}`).value)||1;
 if(checkbox.checked){
 mensagem+=`- ${s.nome} x${qtd} (R$ ${s.valor*qtd})%0A`;
 total+=s.valor*qtd;
 }
 });
 extras.forEach(e=>{
 mensagem+=`- ${e.descricao} (R$ ${e.valor})%0A`;
 total+=e.valor;
 });
 mensagem+=`%0A*Total: R$ ${total}*`;
 window.open(`https://wa.me/5598985291879?text=${mensagem}`,'_blank');
}

function limpar(){
 servicos.forEach((s,i)=>document.getElementById(`serv${i}`).checked=false);
 document.getElementById("cliente").value="";
 extras=[];
 document.getElementById("total").innerText="0";
}
